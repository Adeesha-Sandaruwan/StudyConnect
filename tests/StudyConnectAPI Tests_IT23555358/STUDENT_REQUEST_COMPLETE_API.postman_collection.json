              "path": [
                "api",
                "student-requests"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Request created successfully', function() {",
                  "  pm.response.to.have.status(201);",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.success).to.equal(true);",
                  "  pm.expect(jsonData.message).to.include('email sent');",
                  "  pm.environment.set('requestId', jsonData.request._id);",
                  "  console.log('✓ Request created: ' + jsonData.request._id);",
                  "  console.log('✉️  Confirmation email sent to: ' + jsonData.request.student.email);",
                  "  console.log('✉️  Admin notifications sent to all tutors');",
                  "});",
                  "",
                  "pm.test('Request has correct structure', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.request).to.have.property('_id');",
                  "  pm.expect(jsonData.request).to.have.property('student');",
                  "  pm.expect(jsonData.request).to.have.property('subject');",
                  "  pm.expect(jsonData.request).to.have.property('status');",
                  "  pm.expect(jsonData.request.status).to.equal('open');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
