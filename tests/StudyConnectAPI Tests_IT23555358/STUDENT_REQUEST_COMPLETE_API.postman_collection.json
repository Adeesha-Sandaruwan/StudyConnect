              "raw": "{{baseUrl}}/api/users/auth",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "auth"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var cookies = pm.response.headers.get('set-cookie');",
                  "  if (cookies && cookies.includes('jwt=')) {",
                  "    var match = cookies.match(/jwt=([^;]+)/);",
                  "    if (match) {",
                  "      pm.environment.set('jwt', match[1]);",
                  "      console.log('JWT Token stored');",
                  "    }",
                  "  }",
                  "  pm.test('Login successful', function() {",
                  "    pm.response.to.have.status(200);",
